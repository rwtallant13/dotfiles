#########################
# bspwm && sxhkd files #
#                      #
########################

# edit bspwm files
super + {_,alt + ,shift + }o
	mimeterm ~/.config/{sxhkd/sxhkdrc,bspwm/autostart.sh,bspwm/bspwmrc}

# reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd

#~button3
#    bspc query -D -d 'focused.!occupied' && jgmenu_run

alt + F10
	notify-send -t 3000 "OBS" "Clip Captured"



# reload bspwm config file
super + shift + Escape
	bspwm -r

