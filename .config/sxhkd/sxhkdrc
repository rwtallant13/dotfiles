# independent commands #
#               	   #
########################

# open functions file
super + {_,alt + }a
	mimeterm /home/rob/.{aliases,zshrc}

super + shift + a
	/home/rob/bin/caps2esc

# rofi logout script
super + BackSpace
	/home/rob/bin/rofer -l

# open files
super  + space
	/home/rob/bin/opi -o

# open dir
super + alt + f
	/home/rob/bin/opi -d

# edit files
super  + alt + space
	/home/rob/bin/opi -o /etc /home/rob

# ask opi which dir to search
super + ctrl + space
	/home/rob/bin/opi -a

# copy file name
super + alt + c
	/home/rob/bin/opi -c

# move to blueberry
super + m
	/usr/bin/alacritty -e zsh -ic "vifm /home/rob/downloads/torrents /media/blueberry/"

super + alt + m
	rofer -m

# rofi
alt + space
	rofi -modi "run,ssh" -show run

# qbittorrent
super + q
	qbittorrent

super + d
	chronic discord &

# telegram
super + g
	chronic telegram-desktop &

# screenshot current window
ctrl + Print
	scrot win

# screenshot
Print
	flameshot gui

# screenshot current monitor
super + Print
	flameshot screen -c

# screenshot whole display
super + shift + Print
	flameshot full -c

