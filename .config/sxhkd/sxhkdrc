#########################
# bspwm && sxhkd files #
#                      #
########################

# edit bspwm files
super + {_,alt + ,shift + }o
	xdg-open ~/.config/{sxhkd/sxhkdrc,bspwm/autostart.sh,bspwm/bspwmrc}

# reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd


# caps lock
shift + Escape
	xdotool key Caps_Lock


# reload bspwm config file
super + shift + Escape
	bspwm -r

########################
# independent commands #
#               	   #
########################

# open functions file
super + {_,alt + }a
	xdg-open /home/rob/.{aliases,zshrc}

super + shift + a
	"$bin"/caps2esc

# rofi logout script
super + BackSpace
	"$bin"/rofi-scripts -l

# open files
super  + space
	"$bin"/opi -o

# open files
control  + space
	"$bin"/opi -o

# open dir
super + alt + f
	"$bin"/opi -d

# edit files
super  + alt + space
	"$bin"/opi -e /etc /home/rob

# ask opi which dir to search
super + ctrl + space
	"$bin"/opi -a

# copy file name
super + alt + c
	"$bin"/opi -c

# move to blueberry
super + m
	/usr/bin/alacritty -e zsh -ic "vifm /home/rob/downloads/torrents /media/blueberry/"

# rofi
alt + space
	rofi -modi "run,ssh" -show run

# dmenu
#super + d
#	dmenu_run

# telegram
super + g
	nullify telegram-desktop &

# screenshot current window
ctrl + Print
	scrot win

# screenshot
Print
	flameshot gui

# screenshot current monitor
super + Print
	flameshot screen -c

# screenshot whole display
super + shift + Print
	flameshot full -c

# gui file manager
super + t
	thunar

# vifm
super + f
	/usr/bin/alacritty -e zsh -ic "vifm"

# tui file manager
super + n
    /usr/bin/alacritty -e nnf

# system monitor
ctrl + shift + Escape
	/usr/bin/alacritty -e btm

# launch browser
super + b
	nullify $BROWSER &

# alt browser
super + shift + b
	chromium

# launch incognito browser
super + alt + b
	firefox --new-window --private-window

# terminal emulator
{alt,super} + Return
	/usr/bin/termite

# alt terminal emulator
super + shift + Return
	alacritty

super + alt + Return
	alacritty

# vim
super + v
	/usr/bin/alacritty -e nvim

# Pulseaudio sound manager
super + p
	pavucontrol

# clipboard popup
super + alt + v
	clipmenu -p Copy -i

# toggle redshift
super + F1
	"$bin"/redshift.sh -t

####################
# Volume Control   #
#                  #
####################

XF86AudioLowerVolume
	/usr/bin/pamixer -d 2 && "$bin"/sinkctrl -v

XF86AudioRaiseVolume
	/usr/bin/pamixer -i 2 && "$bin"/sinkctrl -v

shift + XF86AudioLowerVolume
	/usr/bin/pamixer -d 1 && "$bin"/sinkctrl -v

shift + XF86AudioRaiseVolume
	/usr/bin/pamixer -i 1 && "$bin"/sinkctrl -v

XF86AudioMute
	/usr/bin/pamixer --toggle-mute && "$bin"/sinkctrl -v

# switch audio outputs
super + Insert
	"$bin"/sinkctrl -c


####################
# bspwm hotkeys    #
#                  #
####################


#rofi help menu
control + alt + h
	"$bin"/bspscripts rofi_help

# resize left/right
super + r : {Left,Right}
	INC={-10,+10}; bspc node @east -r $INC || bspc node @west -r $INC
# resize up/down
super + r : {Down,Up}
	INC={+10,-10}; bspc node @north -r $INC || bspc node @south -r $INC


# close and kill
super + {_,shift + }c
	bspc node -{c,k}

# window gap +5
super + equal
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` + 5 ))

# window gap -5
super + minus
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` - 5 ))

# Restore original gap
super + plus
	bspc config top_padding 25; bspc config -d focused window_gap 10


#
# nodes
#

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic

# rotate nodes
super + bracket{left,right}
	bspc node @/ -R {90,-90}

# circulate nodes
super + {semicolon,apostrophe}
	bspc node @/ --circulate {backward,forward}

# flip nodes
super + {_,shift + }backslash
	bspc node @/ --flip {vertical,horizontal}

# focus the node in the given direction
alt + {Left,Down,Up,Right}
	bspc node -f {west,south,north,east}

# focus multiple nodes in the given direction
super + alt + {Left,Down,Up,Right}
	bspc node -f @{west,south,north,east}

# vim keys for sane people
alt + {h,j,k,l}
	bspc node -f {west,south,north,east}

# swap node in given direction
super + {Left,Down,Up,Right}
	bspc node -s {west,south,north,east} -f

# receptacles
super + {_,shift} + i
    insert={true,false}; \
    $insert && bspc node -i || \
    for win in `bspc query -N -n .leaf.!window`; do bspc node $win -k ; done;

# receptacle thing
super + alt + i
	"$bin"/bspscripts receptacle

# toggle node states
super + {F9,F10,F11}
	bspc node --state \~{tiled,pseudo_tiled,floating}

super + F12
	bspc desktop -l next

# hide nodes
super +{_,alt +} h
	"$bin"/bspscripts {_,un}hide

# equalize nodes
super + e
	"$bin"/bspscripts equal

#cycle through nodes
alt +{_,shift+} Tab
	bspc node -f {next,prev}.local

#cycle through nodes
super +{_,shift+} Tab
	bspc node -f {next,prev}

#
# workspaces
#

# move selected nodes through workspaces
super + alt + {comma,period}
	bspc node -d {prev,next}.local -f

# move selected nodes through workspaces without focus
super + shift + {comma,period}
	bspc node -d {prev,next}.local

# move workspaces within monitor
super + {comma,period}
	bspc desktop -f {prev,next}.local

# move workspaces within monitor
control + alt + {comma,period}
	bspc desktop -f {prev,next}.local

# focus or send to the given workspace
super + {_,shift + }{1-9}
	bspc {desktop -f,node -d} {1-9}.local

super + alt + {1-9}
	bspc node -d {1-9}.local -f

#
# monitors
#


# move node to different monitor
super + shift + {Left,Right}
	bspc node -m {prev,next} -f

# move node to different monitor without focus
super + shift + alt + {Left,Right}
	bspc node -m {prev,next}


# changed focused monitor
super + ctrl + {Left,Right}
	bspc monitor -f {prev,next}


#
# preselect
#


# preselect the direction
alt + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect ratio
alt + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
alt + ctrl + space
	bspc node -p cancel
