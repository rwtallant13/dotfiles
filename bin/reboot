#!/usr/bin/env sh


if [[ -z $1 ]]; then
    command reboot
fi

case $1 in
    windows|win)
        sudo efibootmgr --bootnext $(efibootmgr | grep Windows | tail -n1 | cut -d' ' -f1 | cut -d't' -f2 | tr -d '*' ) && $reboot
        ;;
    uefi)
        systemctl reboot --firmware-setup
        ;;
	*)
		echo "'win[dows]' or 'uefi'"
		;;

esac
