#!/bin/bash

_sync-mods(){

    if [ "$1" == "fabric" ]; then
        rsync -avz --delete ~/.local/share/multimc/instances/fabric/.minecraft/mods/ bb:/opt/dockermc/fabric/mods/
    elif [ "$1" == "forge" ]; then
        rsync -avz --delete ~/.local/share/multimc/instances/forge/.minecraft/mods/ bb:/opt/dockermc/forge/mods/
	else
        for i in forge fabric; do
            rsync -avz --delete ~/.local/share/multimc/instances/"$i"/.minecraft/mods/ bb:/opt/dockermc/"$i"/mods/
        done
    fi
}

_sync-zip(){
	zip -q ~/downloads/minecraft/forge/forge-mods ~/.local/share/multimc/instances/forge/.minecraft/mods/*
	zip -q ~/downloads/minecraft/fabric/fabric-mods ~/.local/share/multimc/instances/fabric/.minecraft/mods/*
	2>/dev/null 1>&2 mnt nextcloud ; fd . ~/downloads/minecraft/{fabric,forge}/ -e zip -x cp {} /drives/nextcloud/Gaming/Minecraft
}

_help(){
    cat <<- EOF
Usage: mcsync [command] {forge / fabric}


Commands:

    -z, zip			sync zips
    -m, mods {fabric/forge}	sync mods
    -a, all			sync zips and mods

EOF
}


case "$1" in
        -z|zip)
            _sync-zip
            ;;
        -m|mods)
            _sync-mods "$2"
            ;;
        -a|all)
            _sync-mods all
			_sync-zip
            ;;
        *)
            _help
            ;;
esac
